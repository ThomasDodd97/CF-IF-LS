{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "CrunchFlow In-File Programming Language",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#supports"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.cfif",
				"match": "\\b(TITLE|RUNTIME|OUTPUT|PRIMARY_SPECIES|SECONDARY_SPECIES|GASES|MINERALS|AQUEOUS_KINETICS|ION_EXCHANGE|SURFACE_COMPLEXATION|PEST|DISCRETIZATION|INITIAL_CONDITIONS|BOUNDARY_CONDITIONS|TRANSPORT|FLOW|POROSITY|TEMPERATURE|END)\\b"
			}]
		},
		"comments": {
			"name": "comment.line.character.cfif",
			"begin": "!",
			"end": "\n"
		},
		"supports": {
			"name": "support.class.cfif",
			"match": "\\b(CONDITION)"
		}
	},
	"scopeName": "source.in"
}