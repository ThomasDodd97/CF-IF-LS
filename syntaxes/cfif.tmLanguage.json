{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "CrunchFlow In-File Programming Language",
	"patterns": [
		{"include": "#title_block"},
		{"include": "#runtime_block"}
	],
	"repository": {
		"title_block": {
			"patterns": [
				{"include": "#title_block_extent"}
			],
			"repository": {
				"title_block_extent": {
					"begin": "TITLE",
					"end": "END",
					"contentName": "keyword"
				}
			}
		},
		"runtime_block": {
			"patterns": [
				{"include": "#runtime_block_extent"}
			],
			"repository": {
				"runtime_block_extent": {
					"begin": "RUNTIME",
					"end": "END",
					"patterns": [
						{
							"name": "keyword.other",
							"match": "(time_units|timestep_max)"
						}
					]
				}
			}
		}
	},
	"scopeName": "source.in"
}